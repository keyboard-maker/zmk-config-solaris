#include <dt-bindings/zmk/matrix_transform.h>

 / {
    chosen {
        zmk,kscan = &default_kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <7>;
        rows = <4>;
        map = <
RC(1,0) RC(1,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                         
RC(2,0) RC(2,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                         
RC(3,0) RC(3,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)         
                RC(3,2) RC(3,3) RC(3,4)         RC(3,6)  
        >;
    };

    

    default_kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        wakeup-source;
        col-gpios =
            <&pro_micro 0 GPIO_ACTIVE_HIGH>,
            <&pro_micro 1 GPIO_ACTIVE_HIGH>,
            <&pro_micro 2 GPIO_ACTIVE_HIGH>,
            <&pro_micro 3 GPIO_ACTIVE_HIGH>,
            <&pro_micro 4 GPIO_ACTIVE_HIGH>,
            <&pro_micro 5 GPIO_ACTIVE_HIGH>,
            <&pro_micro 6 GPIO_ACTIVE_HIGH>;
            

        row-gpios =
            <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
           
    };
};
